@model CreateRoleViewModel
@{
    ViewBag.Title = "Create New Role";
}

<div class="row Form">
    <div class="col-md-8 col-md-offset-2">
        <form asp-controller="Administration" asp-action="CreateRole" method="post" class="form-horizontal" role="form">
            <h4>Create New Role</h4>
            </hr>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-primary" value="Create Role" />
                    <a asp-action="ListRoles" class="btn btn-primary">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>



